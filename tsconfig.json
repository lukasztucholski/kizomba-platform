{
  "compilerOptions": {
    "jsx": "preserve",
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "outDir": "dist/",
    "sourceMap": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["vuetify"],
    "lib": ["es2015", "dom"]
  },

  "exclude": ["node_modules"],

  "include": ["src/**/*"]
}
